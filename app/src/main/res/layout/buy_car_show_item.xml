<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/bc_ck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/bc_image"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1" />

        <TextView
            android:id="@+id/bc_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2" />

        <TextView
            android:id="@+id/bc_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.umeng.soexample.JisuanView
            android:id="@+id/bc_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></com.umeng.soexample.JisuanView>

        <!--<TextView-->
        <!--android:id="@+id/bc_num"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->
    </LinearLayout>
</LinearLayout>
